---
import { cn } from '~/utils/utils';
import Background from "./Background.astro";

const { id, isDark = false, containerClass = "", bg, as = "section" } = Astro.props;

const WrapperTag = as;
---

<WrapperTag class="relative not-prose scroll-mt-[72px] h-full snap-start snap-always" {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none -z-[1]" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : <Background isDark={isDark} />}
    </slot>
  </div>
  <div
    class:list={[
      cn("relative mx-auto px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default overflow-hidden", containerClass),
      { dark: isDark },
    ]}
  >
    <slot />
  </div>
</WrapperTag>
